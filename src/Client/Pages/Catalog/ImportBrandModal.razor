@inject Microsoft.Extensions.Localization.IStringLocalizer<ImportBrandModal> _localizer

<EditForm Model="@ImportBrandCommand" OnValidSubmit="SaveAsync">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <MudDialog>
        <TitleContent>
            @_localizer["Import Brand"]
        </TitleContent>
        <DialogContent>
            <MudGrid>
                <MudItem>
                     <MudButton HtmlTag="label"
                                           Variant="Variant.Text"
                                           Color="Color.Primary"
                                           Size="Size.Small"
                                           StartIcon="@Icons.Filled.CloudUpload"
                                           for="fileInput">
                                    @_localizer["Upload"]
                                </MudButton>
                    <InputFile id="fileInput" hidden OnChange="UploadFiles" />
                    @if (_file != null)
                            {
                    <MudAlert>@_file.Name</MudAlert>
                    }
                </MudItem>

            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" OnClick="Cancel">@_localizer["Cancel"]</MudButton>
            <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Success">@_localizer["Import"]</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>